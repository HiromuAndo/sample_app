<div class="container">
<p id="notice">
	<%= notice %>
</p>
<div class="row">
<div class="col-xs-3">
<h2>User info</h2>
	<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback:"no_image.jpg" %>
	<table class="table table-striped">
			<tr>
				<th>name</th>
				<th><%= @user.name %></th>
			</tr>
			<tr>
				<th>introduction</th>
				<th><%= @user.introduction %></th>
			</tr>
	</table>
	<div class="row">
		<%= link_to edit_user_path(@user) do %>
			<div class="col-xs-12 btn btn-default"><i class="fas fa-wrench"></i></div>
		<% end %>
	</div>
<h2>New Book</h2>
<%= form_for(@book, url: books_path) do |f| %>
	<div class="field">
		<h4>Title</h4>
		<%= f.text_field :title %>
	</div>
	<div class="field">
		<h4>Opinion</h4>
		<%= f.text_area :body %>
	</div>
	<div class="actions">
		<%= f.submit 'Create Book' %>
	</div>
<% end %>
</div>
<div class="col-xs-9">
<h2>Books</h2>
<table class="table table-striped">
	<tr>
		<th></th>
		<th>Title</th>
		<th>Opinion</th>
	</tr>
	<% @books.each do |book| %>
	<tr>
		<td>
			<%= link_to user_path(book.user) do %>
			<%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback:"no_image.jpg" %>
			<% end %>
		</td>
		<td><%=link_to book.title, book_path(book.id) %></td>
		<td><%= book.body %></td>
	</tr>
	<% end %>
</table>
</div>
</div>
</div>