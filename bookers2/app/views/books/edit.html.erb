<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<h2>Editing Book</h2>
			<%= form_for(@book) do |f| %>
			<% if @book.errors.any? %>
			  <%= @book.errors.count %>errors prohibited this obj from being saved:
			  <ul>
			  <% @book.errors.full_messages.each do |message| %>
			  <li><%= message %></li>
			  <% end %>
			  </ul>
			<% end %>
				<div class="field">
					<h4>Title</h4>
					<%= f.text_field :title %>
				</div>
				<div class="field">
					<h4>Opinion</h4>
					<%= f.text_area :body %>
				</div>
				<div class="actions">
					<%= f.submit 'Update Book' %>
				</div>
			<% end %>

			<%=link_to "Show", book_path(@book) %>
			|
			<%=link_to "Back", books_path %>
		</div>
	</div>
</div>